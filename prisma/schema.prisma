generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Event {
  id          String    @id @unique @default(cuid())
  name        String
  address     Address   @relation(fields: [addressId], references: [id])
  eventDate   DateTime  @updatedAt
  description String
  imageUrls   String[]
  addressId   String
  UserInfo    UserInfo? @relation(fields: [userInfoId], references: [id])
  userInfoId  String?
  Ticket      Ticket[]
}

model UserInfo {
  id          String    @id @unique
  birthday    DateTime?
  cpf         String?
  address     Address[]
  events      Event[]
  tickets     Ticket[]
  auth0UserId String    @unique
}

model Address {
  id           String    @id @unique @default(cuid())
  street       String
  number       Int?
  neighborhood String
  city         String
  state        String
  cep          String
  Event        Event[]
  UserInfo     UserInfo? @relation(fields: [userInfoId], references: [id])
  userInfoId   String?
}

model Ticket {
  id          String    @id @unique @default(cuid())
  event       Event     @relation(fields: [eventId], references: [id])
  price       Float
  isPaid      Boolean?  @default(false)
  checkInDone Boolean?  @default(false)
  qrCodeURL   String
  UserInfo    UserInfo? @relation(fields: [userInfoId], references: [id])
  userInfoId  String?
  eventId     String
}
